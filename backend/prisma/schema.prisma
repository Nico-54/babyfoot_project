generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- UTILISATEURS ---
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("PLAYER")
  createdAt DateTime @default(now())

  // Relation inverse : les tournois auxquels le joueur participe
  tournaments Tournament[] @relation("TournamentPlayers")

  // Un utilisateur peut avoir créé plusieurs tournois
  createdTournaments Tournament[] @relation("TournamentCreator")

  // Equipe créer par l'utilisateur
  createdTeams Team[] @relation("TeamCreator")
    
  // Relations : un utilisateur peut participer à plusieurs matchs
  matchesAsPlayer1 Match[] @relation("Player1")
  matchesAsPlayer2 Match[] @relation("Player2")
}

// --- EQUIPES ---
model Team {
  id        String   @id @default(uuid())
  name      String   @unique
  members   String[]
  createdAt DateTime @default(now())

  // Les tournois auxquels l'équipe participe
  tournaments Tournament[] @relation("TournamentTeams")

    // Relations avec le créateur du tournoi
  creatorId     String
  creator       User      @relation("TeamCreator", fields: [creatorId], references: [id])
}

// --- TOURNOIS ---
model Tournament {
  id            String   @id @default(uuid())
  name          String
  date          DateTime
  time          String
  localisation  String
  description   String
  createdAt DateTime @default(now())
  
  // Relation pour les participants
  players      User[]   @relation("TournamentPlayers")

  // Les tournois auxquels l'équipe participe
  teams Team[] @relation("TournamentTeams")
  
  // Relations avec le créateur du tournoi
  creatorId     String
  creator       User      @relation("TournamentCreator", fields: [creatorId], references: [id])
}

// --- MATCH ---
model Match {
  id        String   @id @default(uuid())
  score1    Int      @default(0)
  score2    Int      @default(0)
  createdAt DateTime @default(now())

  // Relations avec les utilisateurs
  player1Id String
  player1   User   @relation("Player1", fields: [player1Id], references: [id])
  
  player2Id String
  player2   User   @relation("Player2", fields: [player2Id], references: [id])
}